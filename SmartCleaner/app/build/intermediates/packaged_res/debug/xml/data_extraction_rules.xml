<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for Android 12+ (API 31+)
   Controls what data can be extracted from the device during backup/restore
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user preferences -->
        <include domain="sharedpref" path="." />
        
        <!-- Exclude sensitive data -->
        <exclude domain="sharedpref" path="auth_prefs.xml" />
        <exclude domain="database" path="." />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include user preferences for device transfer -->
        <include domain="sharedpref" path="." />
        
        <!-- Exclude sensitive data -->
        <exclude domain="sharedpref" path="auth_prefs.xml" />
        <exclude domain="database" path="." />
    </device-transfer>
</data-extraction-rules>
